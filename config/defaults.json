{
  "_comment": "Configuracion por defecto del CodeReviewer. Copiada a .claude-toolkit.config.json durante la instalacion.",
  "version": "1.0.0",
  "trigger": "pre-commit",
  "blocking": {
    "on_critical_action": "block",
    "on_low_doctor_score": true,
    "doctor_score_threshold": 50
  },
  "reporting": {
    "level": "critical_high",
    "save_report": true,
    "report_dir": ".claude-review"
  },
  "auto_fix": {
    "mode": "ask",
    "only_high_confidence": true
  },
  "tools": {
    "vercel_review": true,
    "react_doctor": true
  }
}
